<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NOCOStudio" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/theme1</item>
        <item name="colorPrimaryVariant">@color/theme1</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/theme1</item>
        <item name="colorSecondaryVariant">@color/theme1</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

    </style>

    <style name="animation">
        <item name="android:windowEnterAnimation">@anim/onesignal_fade_in</item>
        <item name="android:windowExitAnimation">@anim/onesignal_fade_out</item>

    </style>

    <style name="MyRatingBar"
        parent="Widget.AppCompat.RatingBar"
        >
        <item name="colorControlNormal">#4D000000</item>
        <item name="colorControlActivated">@color/theme1</item>

    </style>
    
    <style name="BottomSheetStyle" parent="Theme.Design.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/Modal</item>
    </style>

    <style name="Modal" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bottom_sheet_background</item>
    </style>



</resources>